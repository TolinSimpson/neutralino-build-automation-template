        <false/>
        
        <key>USE_HFS_COMPRESSION</key>
        <true/>
    </dict>
    
    <!-- Files and Resources (mirrors .iss [Files] section) -->
    <key>PACKAGE_FILES</key>
    <array>
        <dict>
            <key>PATH</key>
            <string>dist/mac_universal/{{APP_BINARY_NAME}}.app</string>
            <key>PATH_TYPE</key>
            <integer>0</integer>
            <key>CHILDREN</key>
