        <dict>
            <key>PATH</key>
            <string>_app_scaffolds/mac/scripts/postinstall</string>
            <key>PATH_TYPE</key>
            <integer>0</integer>
        </dict>
        
        <key>PREINSTALL_PATH</key>
        <dict>
            <key>PATH</key>
            <string>_app_scaffolds/mac/scripts/preinstall</string>
            <key>PATH_TYPE</key>
            <integer>0</integer>
        </dict>
    </dict>
    
    <!-- Resources (icons, documentation, etc.) -->
    <key>PACKAGE_RESOURCES</key>
